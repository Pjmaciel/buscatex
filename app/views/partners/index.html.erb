<div class="container mx-auto px-4 md:py-16 py-6">
  <div class="text-center">
    <h1 class="text-4xl font-semibold font-heading text-zinc-900 dark:text-zinc-100 tracking-tight">Partners</h1>
    <p class="font-light text-base text-zinc-700 tracking-normal mt-3 dark:text-zinc-300">Explore our partners.</p>
  </div>

    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
      <% @partners.each do |partner| %>
        <%= render 'partner', partner: partner %>
      <% end %>
    </div>
  </div>
</div>
